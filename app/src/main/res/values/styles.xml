<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="android:colorBackground">@color/surfaceColor</item>
        <item name="android:windowBackground">@drawable/app_background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.MovieBucket.Headline3</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.MovieBucket.Headline6</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MovieBucket.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MovieBucket.Body2</item>
    </style>

    <style name="Widget.MovieBucket.BottomNavigationView.Colored" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="TextAppearance.MovieBucket.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="TextAppearance.MovieBucket.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="Widget.MovieBucket.EditText" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="background">@null</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="TextAppearance.MovieBucket.SearchResult.Subtitle" parent="TextAppearance.AppCompat.SearchResult.Subtitle">
        <item name="fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="TextAppearance.MovieBucket.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/open_sans</item>
    </style>

    <style name="TextAppearance.MovieBucket.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="Credits" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
